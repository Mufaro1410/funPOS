#:kivy 2.0.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<funPOSWindow>:
    ScreenManager:
        id: funpos_screen_manager
        MDScreen:
            id: login_screen
            name: "Login Screen"
        MDScreen:
            id: main_screen
            name: 'Main Screen'
                    
<MainWindow>:
    MDScreen:
        MDBottomNavigation:
            panel_color: get_color_from_hex("#eeeaea")
            elected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1
            MDBottomNavigationItem:
                name: 'Home Screen'
                text: 'home'
                icon: 'home'
                MDScreen:
                    id: dashboard
            MDBottomNavigationItem:
                name: 'Register Screen'
                text: 'register'
                icon: 'cash-register'
                MDScreen:
                    id: register
            MDBottomNavigationItem:
                name: 'Inventory Screen'
                text: 'inventory'
                icon: 'file-table'
                MDScreen:
                    id: inventory
            MDBottomNavigationItem:
                name: 'Users Screen'
                text: 'users'
                icon: 'account-tie'
                MDScreen:
                    id: users
            MDBottomNavigationItem:
                name: 'Reports Screen'
                text: 'reports'
                icon: 'chart-line'
                MDScreen:
                    id: reports