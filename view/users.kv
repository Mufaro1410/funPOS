                            text: "User Details"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDSeparator:
                        MDTextField:
                            id: u_id
                            hint_text: "ID"
                            readonly: True
                        MDTextField:
                            id: first_name
                            hint_text: "First Name"
                        MDTextField:
                            id: last_name
                            hint_text: "Last Name"
