                            id: date_of_birth
                            hint_text: "Date of Birth"
                            helper_text: "Format(YYYY-MM-DD) e.g. 2021-01-15"
                            helper_text_mode: "persistent"
                        MDTextField:
                            id: gender
                            hint_text: "Gender"
                            helper_text: "Choose (Male or Female)"
                            helper_text_mode: "persistent"
                        MDTextField:
                            id: email
                            hint_text: "Email"
                        MDTextField:
                            id: cell
                            hint_text: "Cell"
                        MDTextField:
                            id: address
                            hint_text: "Address"
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: user_credentials.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: user_credentials
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "User Credentials"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDSeparator:
                        MDTextField:
                            id: c_id
                            hint_text: "ID"
                            readonly: True
                        MDTextField:
                            id: username
                            hint_text: "Username"
                        MDTextField:
                            id: password
                            hint_text: "Password"
                            password: True
                            readonly: True
                        MDTextField:
                            id: designation
                            hint_text: "Designation"
                            helper_text: "Choose (Administrator or Operator)"
                            helper_text_mode: "persistent"
                        MDTextField:
                            id: user_id
                            hint_text: "User ID"
                            readonly: True
                MDCard:
                    orientation: "vertical"
                    size_hint: .98, None
                    height: reset_password.height
                    #focus_behavior: True
                    #ripple_behavior: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    radius: 12
                    MDBoxLayout:
                        id: reset_password
                        orientation: "vertical"
                        spacing: "10dp"
                        adaptive_height: True
                        padding: "20dp", "20dp", "20dp", "20dp"
                        MDLabel:
                            text: "Reset Password"
                            theme_text_color: "Primary"
                            font_style: "H5"
                            bold: True
                            adaptive_height: True
                        MDSeparator:
                        MDTextField:
                            id: r_id
                            hint_text: "ID"
                            readonly: True
                        MDTextField:
                            id: r_username
                            hint_text: "Username"
                            readonly: True
                        MDTextField:
                            id: r_password
                            hint_text: "Password"
                            password: True
                        MDRaisedButton:
                            id: reset_password_button
                            text: 'RESET'
                            font_size: 20
                            halign: 'center'
                            #pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            #size_hint: None, None
                            #size: 500, 50
                            on_release: print('Password reset complete...')